# ===================================
# 서버 기본 설정
# ===================================
PORT=7000
NODE_ENV=development
LOG_LEVEL=info  # debug, info, warn, error

# 서버 IP 설정 (LAN 접속용)
SERVER_IP=192.168.200.106
SERVER_PORT=7000

# ===================================
# 보안 설정
# ===================================
# JWT 설정
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production
SESSION_SECRET=your-session-secret-key-here-change-this-in-production

# ===================================
# 이메일 설정
# ===================================
# 개발 환경 (MailDev 등 로컬 메일 서버)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASS=password

# 프로덕션 환경 - Gmail 사용 시 주석 해제
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-16-digit-app-password

# Postfix 설정 (로컬 이메일 서버 사용)
USE_POSTFIX=true

# ===================================
# 프론트엔드 설정
# ===================================
# 프론트엔드 URL (이메일 인증 링크용)
FRONTEND_URL=http://localhost:5173

# 클라이언트 URL
CLIENT_URL=http://localhost:5173

# ===================================
# OAuth 설정
# ===================================
# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===================================
# 데이터베이스 설정
# ===================================
# PostgreSQL 데이터베이스
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=metaverse

# ===================================
# WebRTC 설정
# ===================================
# WebRTC 모드: 'p2p' (직접 연결) 또는 'mediasoup' (SFU 서버)
WEBRTC_MODE=mediasoup

# P2P 모드 설정 (WEBRTC_MODE=p2p 일 때 사용)
P2P_MAX_ROOMS=1000                    # 최대 방 개수
P2P_MAX_PARTICIPANTS_PER_ROOM=10      # 방당 최대 참가자 수

# MediaSoup 모드 설정 (WEBRTC_MODE=mediasoup 일 때 사용)
MEDIASOUP_MAX_ROOMS=400                # 최대 방 개수
MEDIASOUP_MAX_PARTICIPANTS_PER_ROOM=100 # 방당 최대 참가자 수
MEDIASOUP_LISTEN_IP=0.0.0.0            # MediaSoup 리스닝 IP
MEDIASOUP_ANNOUNCED_IP=192.168.200.106  # 실제 서버 공인 IP (프로덕션에서 변경 필요)
MEDIASOUP_PORT=3000                     # MediaSoup 포트

# ===================================
# Redis 설정 (옵션)
# ===================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ===================================
# SSL 인증서 경로 (옵션)
# ===================================
# SSL_KEY_PATH=./ssl/key.pem
# SSL_CERT_PATH=./ssl/cert.pem

# ===================================
# 성능 최적화 설정
# ===================================
# MAX_FILE_SIZE=100mb
# REQUEST_TIMEOUT=60000
# SOCKET_PING_TIMEOUT=60000
# SOCKET_PING_INTERVAL=25000