# 서버 설정
PORT=7000
NODE_ENV=development
LOG_LEVEL=info  # debug, info, warn, error

# 서버 IP 설정 (LAN 접속용)
SERVER_IP=192.168.200.106
SERVER_PORT=7000

# JWT 설정
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# 이메일 설정 (개발 환경)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASS=password

# 이메일 설정 (프로덕션 환경 - Gmail)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-16-digit-app-password

# Postfix 설정 (로컬 이메일 서버 사용)
USE_POSTFIX=true

# 프론트엔드 URL (이메일 인증 링크용)
FRONTEND_URL=http://localhost:5173

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 클라이언트 URL
CLIENT_URL=http://localhost:5173

# PostgreSQL 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=metaverse 

# WebRTC Mode Configuration
# Options: 'p2p' (peer-to-peer) or 'mediasoup' (SFU server)
WEBRTC_MODE=mediasoup

# P2P Mode Configuration
P2P_MAX_ROOMS=1000
P2P_MAX_PARTICIPANTS_PER_ROOM=10

# MediaSoup Mode Configuration
MEDIASOUP_MAX_ROOMS=400
MEDIASOUP_MAX_PARTICIPANTS_PER_ROOM=100
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=192.168.200.106
MEDIASOUP_PORT=3000